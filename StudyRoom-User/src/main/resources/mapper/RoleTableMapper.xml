<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ewing.mapper.RoleTableMapper">

    <resultMap id="BaseResultMap" type="com.ewing.domain.entity.RoleTable">
            <id property="roleId" column="role_id" jdbcType="VARCHAR"/>
            <result property="id" column="id" jdbcType="BIGINT"/>
            <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        role_id,id,role_name,
        description
    </sql>


    <select id="getRolesByUserId" resultMap="BaseResultMap">
        SELECT rt.role_id, rt.role_name, rt.description
        FROM role_table rt
                 INNER JOIN user_roles ur ON rt.role_id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>

    <select id="selectAllRoles" resultMap="BaseResultMap">
        SELECT * FROM role_table
    </select>
</mapper>

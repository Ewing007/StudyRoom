<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ewing.mapper.MessageTableMapper">

    <resultMap id="MessageDtoResultMap" type="com.ewing.domain.entity.MessageTable">
        <id column="id" property="id"/>
        <result column="message_id" property="messageId"/>
        <result column="top_message_id" property="topMessageId"/>
        <result column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_avatar" property="userAvatar"/>
        <result column="content" property="content"/>
        <result column="reply_to" property="replyTo"/>
        <result column="reply_to_user_id" property="replyToUserId"/>
        <result column="reply_to_user_name" property="replyToUserName"/>
        <result column="user_avatar" property="userAvatar"/>
        <result column="status" property="status"/>
        <result column="del_flag" property="delFlag"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="getRepliesByMessageId" resultMap="MessageDtoResultMap">
        SELECT m.*, u.user_name, u.avatar
        FROM message_table m
                 LEFT JOIN user_table u ON m.user_id = u.user_id
        WHERE m.reply_to = #{messageId} AND m.del_flag = '0'
    </select>

    <select id="getRootMessages" resultMap="MessageDtoResultMap">
        SELECT m.*, u.user_name, u.avatar
        FROM message_table m
                 LEFT JOIN user_table u ON m.user_id = u.user_id
        WHERE m.reply_to IS NULL AND m.del_flag = '0'
    </select>

    <!-- MessageMapper.xml -->
    <!-- 获取顶级留言 -->
    <select id="getMessageById" resultMap="MessageDtoResultMap">
        SELECT * FROM message_table WHERE message_id = #{id}
    </select>

    <!-- 获取顶级留言下的所有回复，排除顶级留言本身 -->
    <select id="getRepliesByTopMessageIdAndExcludeTopMessage" resultMap="MessageDtoResultMap">
        SELECT m.*, u.user_name, u.avatar
        FROM message_table m
                 LEFT JOIN user_table u ON m.user_id = u.user_id
        WHERE m.top_message_id = #{topMessageId} AND m.message_id != #{excludeId} AND m.del_flag = '0'
    </select>


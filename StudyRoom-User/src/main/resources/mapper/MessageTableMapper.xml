<!--                 LEFT JOIN user_table u ON m.user_id = u.user_id-->
<!--        WHERE m.reply_to = #{messageId} AND m.del_flag = '0'-->
<!--    </select>-->

    <select id="getRepliesByTopMessageId" resultMap="MessageDtoResultMap">
        SELECT m.*, u.user_name, u.avatar
        FROM message_table m
                 LEFT JOIN user_table u ON m.user_id = u.user_id
        WHERE m.top_message_id = #{topMessageId} AND m.del_flag = '0'
    </select>


</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ewing.mapper.SeatTableMapper">

    <resultMap id="BaseResultMap" type="com.ewing.domain.entity.SeatTable">
            <id property="seatId" column="seat_id" jdbcType="VARCHAR"/>
            <result property="id" column="id" jdbcType="BIGINT"/>
            <result property="roomId" column="room_id" jdbcType="VARCHAR"/>
            <result property="seatNumber" column="seat_number" jdbcType="VARCHAR"/>
<!--            <result property="date" column="date" jdbcType="DATE"/>-->
            <result property="status" column="status" jdbcType="CHAR"/>
            <result property="delFlag" column="def_flag" jdbcType="CHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        seat_id,id,room_id,
        seat_number,status,def_flag,create_time,
        update_time,description
    </sql>

    <delete id="deleteByRoomId" parameterType="java.lang.String">
        DELETE FROM seat_table WHERE room_id = #{roomId}
    </delete>

    <update id="updateStatusByRoomId" parameterType="map">
        UPDATE seat_table SET status = #{status} WHERE room_id = #{roomId}
    </update>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ewing.mapper.SeatTimeTableMapper">

    <resultMap id="BaseResultMap" type="com.ewing.domain.entity.SeatTimeTable">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="roomId" column="room_id" jdbcType="VARCHAR"/>
            <result property="seatId" column="seat_id" jdbcType="VARCHAR"/>
            <result property="seatNumber" column="seat_number" jdbcType="VARCHAR"/>
            <result property="slotId" column="slot_id" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="CHAR"/>
            <result property="date" column="date" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,room_id,seat_id,seat_number,slot_id,
        status,date
    </sql>


    <delete id="deleteByRoomId" parameterType="java.lang.String">
        DELETE FROM seat_time_table WHERE room_id = #{roomId}
    </delete>

    <update id="updateStatusByRoomId" parameterType="map">
        UPDATE seat_time_table SET status = #{status} WHERE room_id = #{roomId}
    </update>

</mapper>
